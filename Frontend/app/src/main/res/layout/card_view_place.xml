<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:id="@+id/local_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <ImageView
                android:layout_width="65px"
                android:layout_height="65px"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/favorite"
                android:clickable="true"
                android:layout_below="@+id/local_direction"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/local_name"
                android:text="nombre"
                android:layout_toRightOf="@+id/local_photo"
                android:layout_alignParentTop="true"
                android:textSize="21dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/local_phone"
                android:text="telefono"
                android:layout_toRightOf="@+id/local_photo"
                android:layout_below="@+id/local_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="direccion"
                android:id="@+id/local_direction"
                android:layout_toRightOf="@+id/local_photo"
                android:layout_below="@+id/local_phone"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>