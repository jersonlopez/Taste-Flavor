<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ProfileFragment"
    android:background="@color/colorProfile">

    <!-- TODO: Update blank fragment layout -->

     <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="102dp"
            android:layout_height="102dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/Profile"
             android:textSize="30dp"
             android:textStyle="bold|italic"
             android:id="@+id/textTittle"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_marginTop="5dp"
             android:layout_marginRight="8dp"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintLeft_toRightOf="@+id/imageViewProfile"
             android:layout_marginLeft="8dp"
             app:layout_constraintHorizontal_bias="0.084" />

        <TextView
            android:id="@+id/textViewNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jerson"
            app:layout_constraintLeft_toRightOf="@+id/imageViewProfile"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textTittle" />

        <TextView
            android:id="@+id/textViewLastnameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="López Castaño"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewNameProfile"
            app:layout_constraintLeft_toRightOf="@+id/imageViewProfile"
            android:layout_marginLeft="45dp" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
